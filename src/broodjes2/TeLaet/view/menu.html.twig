{% set app = globals.app %}

{% if globals.user is not defined or globals.user is null %}
  <nav id="reg-menu">
    <div class="container">
      <ul class="nav nav-pills">
        <li><a href="{{ app.urlFor('user_register') }}">Register</a></li>
        <li><a href="{{ app.urlFor('password_reset_request') }}">Forgot password</a></li>
        <li><a href="{{ app.urlFor('logon') }}">Logon</a></li>
      </ul>
    </div>
  </nav>
{% else %}
  {% set logged_in = globals.user %}
  <nav id="reg-menu">
    <div class="container">
      <ul class="nav nav-pills">        
        <li><a href="{{ app.urlFor('user_logoff') }}">Logoff</a></li>
        {% if logged_in.isAdmin %}
        <li><a href="{{ app.urlFor('admin_main_page') }}">Admin</a></li>
        {% endif %}
      </ul>
    </div>
  </nav>
{% endif %}