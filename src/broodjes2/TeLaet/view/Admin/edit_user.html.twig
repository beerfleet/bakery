{% extends 'base.html.twig' %}

{% block nav_menu %}
  {{ parent() }}
  {% include 'Admin/admin.menu.l2.html.twig' %}
{% endblock nav_menu %}

{% block content %}
  <h1 class="header">Edit Use data</h1>
  <form class="bodyBG" action="{{ app.urlFor('admin_user_edit_process') }}" method="post">
    <input type="hidden" id="id" name="id" value="{{ user.id }}" />
    <div class="form-group">
      <label for="username">Username</label>
      <input readonly="true" class="form-control" type="text" id="username" name="username" value="{{ user.username }}"/>
    </div>

    <div class="form-group">
      <label for="email">E-mail address</label>
      <input readonly="true" class="form-control" type="text" id="email" name="email" value="{{ user.email }}" />
    </div>

    <div class="form-group">
      <label for="firstname">First name</label>
      <input class="form-control" type="text" id="firstname" name="firstname" value="{{ user.firstname }}"/>
    </div>

    <div class="form-group">
      <label for="surname">Surname</label>
      <input class="form-control" type="text" id="surname" name="surname" value="{{ user.surname }}"/>
    </div>

    <div class="form-group">
      <label for="address">Street + Nr.</label>
      <input class="form-control" type="text" id="address" name="address" value="{{ user.address }}" />
    </div>

    <div class="form-group">
      <label for="postcode">Postcode</label>
      <select class="form-control" id="postcode" name="postcode">
        {% for postcode in postcodes %}
          <option value="{{ postcode.id }}" {% if user.postcode.id == postcode.id %} selected="selected" {% endif %}>{{ postcode.postcode }} -- {{ postcode.town }}</option>
        {% endfor %}
      </select>
    </div>

    <input class="form-control btn-action" type="submit" id="submit" name="submit" value="Submit" />
  </form>
{% endblock content %}

{% block extrajs %}
  <script type="text/javascript">
    $(function() {
      $('ul>li>a').each(function() {
        if ($(this).text() == "Users") {
          $(this).parent().addClass("active2");
        }
      });
    });
  </script>
{% endblock extrajs %}