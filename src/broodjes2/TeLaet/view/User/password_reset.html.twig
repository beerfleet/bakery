{% extends 'base.html.twig' %}

{% block title %}
  Password reset
{% endblock title %}

{% block content %}
  {% set app = globals.app %}
  <h1 class="header">Reset your password</h1>
  <form class="bodyBG" action="{{ app.urlFor('password_reset') }}" method="post">
    
    <input type="hidden" id="user_id" name="user_id" value="{{ user_id }}" />
    
    <div class="form-group">
      <label for="password">Password</label>
      <input class="form-control" type="password" id="password" name="password" />      
    </div>
    
    <div class="form-group">
      <label for="password_bis">Repeat password</label>
      <input class="form-control" type="password" id="password_bis" name="password_bis" />      
    </div>
    
    <input class="form-control btn-action" type="submit" id="submit" name="submit" value="Change password" />
    
  </form>
{% endblock content %}